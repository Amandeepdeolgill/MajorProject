<% layout("/layouts/boilerplate.ejs") %>
<div class="row mb-5">
    <div class="col-8 offset-2 mb-5">
        <h2>Create a new listing!</h2>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" class="form-control" type="text" placeholder="Enter the title!" required>
         <div class="valid-feedback">Title looks good!</div>
        </div> 
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input name="listing[description]" class="form-control" type="text" placeholder="Enter the description!" required>
            <div class="valid-feedback">Description looks good!</div>
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" class="form-control"  placeholder="Enter the price!" required>
            <div class="invalid-feedback">Enter price!</div>
        </div> 
        <div class="mb-3">
            <label for="img" class="form-label">Upload Listing Image</label>
            <input name="listing[img]" class="form-control" type="file" required>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" class="form-control" type="text" placeholder="Enter the location!" required>
            <div class="invalid-feedback">Enter location!</div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" class="form-control" type="text" placeholder="Enter the country!" required>
        </div> 
        <button class="btn add-btn mb-3">Submit</button>
    </form>
</div>
</div>

